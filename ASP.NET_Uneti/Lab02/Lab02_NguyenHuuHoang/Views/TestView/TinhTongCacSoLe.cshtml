
@{
    ViewBag.Title = "TinhTongCacSoLe";
}

@{
    int[] a = ViewBag.x;
    string msg = "";
    int S = 0;
    // Duyệt qua mảng và tìm các số lẻ
    if (a != null && a.Length > 0)
    {
        for (int i = 0; i < a.Length; i++)
        {
            if (a[i] % 2 != 0)
            {
                msg += $"{a[i]} ";  // In các phần tử lẻ
                S += a[i];           // Tính tổng các phần tử lẻ
            }
        }
    }
    else
    {
        msg = "Mảng rỗng hoặc không tồn tại.";
    }
}

<h2>Tính tổng các phần tử lẻ trong mảng</h2>
<p>Các số lẻ trong mảng là: <br /> @msg</p>
<p>Tổng các số lẻ trong mảng là: <br /> @S</p>



